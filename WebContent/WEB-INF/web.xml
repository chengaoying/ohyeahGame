<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  
  <context-param>
    <param-name>pageSize</param-name>
    <param-value>10</param-value>
  </context-param>
  
  	<filter>
		<filter-name>ConnectionAndEncodingFilter</filter-name>
		<filter-class>cn.oyeah.filter.ConnectionAndEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>		
	</filter>	
	
	<filter-mapping>
		<filter-name>ConnectionAndEncodingFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>ConnectionAndEncodingFilter</filter-name>
		<url-pattern>/servlet/*</url-pattern>
	</filter-mapping>
	
	
	<filter>
		<filter-name>SessionFilter</filter-name>
		<filter-class>cn.oyeah.filter.SessionFilter</filter-class>
	</filter>	
	
	<filter-mapping>
		<filter-name>SessionFilter</filter-name>
		<url-pattern>/servlet/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>SessionFilter</filter-name>
		<url-pattern>/web/*</url-pattern>
	</filter-mapping>
	
	
  
  <servlet>
     <servlet-name>UserLoginServlet</servlet-name>
     <servlet-class>cn.oyeah.servlet.UserLoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
     <servlet-name>UserLoginServlet</servlet-name>
     <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
    <servlet>
     <servlet-name>UserAddServlet</servlet-name>

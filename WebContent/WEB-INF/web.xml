      <servlet>
  <servlet-name>UserRecordServlet</servlet-name>
     <servlet-class>cn.oyeah.servlet.UserRecordServlet</servlet-class>
  </servlet>
  <servlet-mapping>
     <servlet-name>UserRecordServlet</servlet-name>
